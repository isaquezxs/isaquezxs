-- Tab10: Troll Avan√ßado
local Tab10 = Window:MakeTab({"Troll Avan√ßado", "bomb"})

Tab10:AddSection({"M√©todos de Fling"})

Tab10:AddButton({"Fling com Sof√°", function()
    if selectedPlayer then
        -- Implementa√ß√£o b√°sica de fling
        local targetChar = selectedPlayer.Character
        local localChar = game.Players.LocalPlayer.Character
        
        if targetChar and localChar then
            local targetHRP = targetChar:FindFirstChild("HumanoidRootPart")
            local localHRP = localChar:FindFirstChild("HumanoidRootPart")
            
            if targetHRP and localHRP then
                -- Spawna um sof√°
                pcall(function()
                    game:GetService("ReplicatedStorage").RE["1Too1l"]:InvokeServer("PickingTools", "Couch")
                    wait(1)
                    
                    -- Fling b√°sico
                    local bodyVelocity = Instance.new("BodyVelocity")
                    bodyVelocity.Velocity = Vector3.new(0, 100, 0)
                    bodyVelocity.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
                    bodyVelocity.Parent = targetHRP
                    
                    wait(2)
                    bodyVelocity:Destroy()
                end)
            end
        end
    end
end})

Tab10:AddButton({"Fling com Bola", function()
    if selectedPlayer then
        local targetChar = selectedPlayer.Character
        if targetChar then
            local targetHRP = targetChar:FindFirstChild("HumanoidRootPart")
            if targetHRP then
                local bodyVelocity = Instance.new("BodyVelocity")
                bodyVelocity.Velocity = Vector3.new(math.random(-100,100), 150, math.random(-100,100))
                bodyVelocity.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
                bodyVelocity.Parent = targetHRP
                
                wait(3)
                bodyVelocity:Destroy()
            end
        end
    end
end})

