-- Tab3: Troll B√°sico
local Tab3 = Window:MakeTab({"Troll", "skull"})

Tab3:AddSection({"Ferramentas de Trollagem"})

-- Sistema de sele√ß√£o de jogador
local selectedPlayer = nil
local playerNames = {}

-- Atualizar lista de jogadores
local function updatePlayerList()
    playerNames = {}
    for _, player in ipairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer then
            table.insert(playerNames, player.Name)
        end
    end
end

updatePlayerList()

Tab3:AddDropdown({
    Name = "Selecionar Jogador",
    Description = "Escolha um jogador para trollar",
    Default = "",
    Options = playerNames,
    Callback = function(value)
        selectedPlayer = game.Players:FindFirstChild(value)
    end
})

Tab3:AddButton({"Atualizar Lista", function()
    updatePlayerList()
    game.StarterGui:SetCore("SendNotification", {
        Title = "Lista Atualizada",
        Text = "Lista de jogadores atualizada!",
        Duration = 3
    })
end})

Tab3:AddSection({"A√ß√µes B√°sicas"})

Tab3:AddButton({"TP at√© o Jogador", function()
    if selectedPlayer and selectedPlayer.Character then
        local targetHRP = selectedPlayer.Character:FindFirstChild("HumanoidRootPart")
        local localHRP = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        if targetHRP and localHRP then
            localHRP.CFrame = targetHRP.CFrame
        end
    end
end})

Tab3:AddButton({"Spectar Jogador", function()
    if selectedPlayer and selectedPlayer.Character then
        workspace.CurrentCamera.CameraSubject = selectedPlayer.Character.Humanoid
    end
end})

Tab3:AddButton({"Parar Spectar", function()
    local player = game.Players.LocalPlayer
    if player.Character then
        workspace.CurrentCamera.CameraSubject = player.Character.Humanoid
    end
end})

-- Tab4: Scripts Trolls Avan√ßados
local Tab4 = Window:MakeTab({"Scripts Trolls", "fire"})

Tab4:AddSection({"Black Hole"})

Tab4:AddButton({"Ativar Black Hole", function()
    local Players = game:GetService("Players")
    local RunService = game:GetService("RunService")
    local LocalPlayer = Players.LocalPlayer
    
    local blackHoleActive = true
    local connection
    
    connection = RunService.Heartbeat:Connect(function()
        if not blackHoleActive then
            connection:Disconnect()
            return
        end
        
        local character = LocalPlayer.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            local rootPart = character.HumanoidRootPart
            
            for _, part in pairs(workspace:GetDescendants()) do
                if part:IsA("BasePart") and not part.Anchored and part ~= rootPart then
                    local direction = (rootPart.Position - part.Position).Unit
                    part.Velocity = direction * 50
                end
            end
        end
    end)
    
    Tab4:AddButton({"Desativar Black Hole", function()
        blackHoleActive = false
        if connection then
            connection:Disconnect()
        end
    end})
end})

Tab4:AddSection({"Invisibilidade"})

Tab4:AddButton({"Ficar Invis√≠vel", function()
    local player = game.Players.LocalPlayer
    local character = player.Character
    if character then
        for _, part in pairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Transparency = 1
            end
        end
        game.StarterGui:SetCore("SendNotification", {
            Title = "Invisibilidade",
            Text = "Voc√™ est√° invis√≠vel!",
            Duration = 5
        })
    end
end})

Tab4:AddButton({"Voltar ao Normal", function()
    local player = game.Players.LocalPlayer
    local character = player.Character
    if character then
        for _, part in pairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Transparency = 0
            end
        end
    end
end})

-- Tab5: Sistema RGB
local Tab5 = Window:MakeTab({"RGB", "brush"})

local rgbSpeed = 3
Tab5:AddSlider({
    Name = "Velocidade RGB",
    Description = "Controla a velocidade do efeito",
    Min = 1,
    Max = 10,
    Default = 3,
    Callback = function(value)
        rgbSpeed = value
    end
})

-- Fun√ß√£o para gerar cor RGB
local function getRainbowColor()
    local tickTime = tick() * rgbSpeed
    local r = math.sin(tickTime) * 0.5 + 0.5
    local g = math.sin(tickTime + 2) * 0.5 + 0.5
    local b = math.sin(tickTime + 4) * 0.5 + 0.5
    return Color3.new(r, g, b)
end

Tab5:AddSection({"RGB Personal"})

local bodyRgb = false
Tab5:AddToggle({
    Name = "RGB Corpo",
    Description = "Efeito RGB no corpo",
    Default = false,
    Callback = function(value)
        bodyRgb = value
        if value then
            spawn(function()
                while bodyRgb do
                    pcall(function()
                        local color = getRainbowColor()
                        game:GetService("ReplicatedStorage").Remotes.ChangeBodyColor:FireServer(color)
                    end)
                    wait(0.1)
                end
            end)
        end
    end
})

local nameRgb = false
Tab5:AddToggle({
    Name = "RGB Nome RP",
    Description = "Efeito RGB no nome",
    Default = false,
    Callback = function(value)
        nameRgb = value
        if value then
            spawn(function()
                while nameRgb do
                    pcall(function()
                        local color = getRainbowColor()
                        game:GetService("ReplicatedStorage").RE["1RPNam1eColo1r"]:FireServer("PickingRPNameColor", color)
                    end)
                    wait(0.1)
                end
            end)
        end
    end
})

-- Tab6: Sistema de √Åudio
local Tab6 = Window:MakeTab({"Audio", "radio"})

local loopAtivo = false
local InputID = ""

Tab6:AddTextBox({
    Name = "ID do √Åudio",
    Description = "Digite o ID do som",
    Default = "",
    PlaceholderText = "Exemplo: 6832470734",
    ClearTextOnFocus = true,
    Callback = function(text)
        InputID = text
    end
})

local function playSound(soundId)
    pcall(function()
        game:GetService("ReplicatedStorage").RE["1Gu1nSound1s"]:FireServer(workspace, tonumber(soundId), 1)
    end)
end

Tab6:AddButton({
    Name = "Tocar Som",
    Description = "Toca o som inserido",
    Callback = function()
        if InputID and InputID ~= "" then
            playSound(InputID)
            game.StarterGui:SetCore("SendNotification", {
                Title = "√Åudio",
                Text = "Som tocando: " .. InputID,
                Duration = 3
            })
        end
    end
})

Tab6:AddToggle({
    Name = "Loop do Som",
    Description = "Toca em loop",
    Default = false,
    Callback = function(value)
        loopAtivo = value
        if value then
            spawn(function()
                while loopAtivo do
                    if InputID and InputID ~= "" then
                        playSound(InputID)
                    end
                    wait(3)
                end
            end)
        end
    end
})

Tab6:AddSection({"Sons Pr√©-definidos"})

