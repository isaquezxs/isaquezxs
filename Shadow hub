-- Tab8: Casas
local Tab8 = Window:MakeTab({"Casas", "home"})

Tab8:AddSection({"Fun√ß√µes de Casa"})

Tab8:AddButton({"Comprar Casa Gr√°tis", function()
    local houses = workspace:FindFirstChild("001_Lots")
    if houses then
        for _, house in pairs(houses:GetChildren()) do
            if house.Name == "For Sale" then
                local buyPart = house:FindFirstChild("BuyHouse")
                if buyPart and buyPart:FindFirstChild("ClickDetector") then
                    fireclickdetector(buyPart.ClickDetector)
                    break
                end
            end
        end
    end
end})

Tab8:AddButton({"Remover Bans", function()
    local successCount = 0
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj.Name:lower():find("ban") then
            pcall(function()
                obj:Destroy()
                successCount = successCount + 1
            end)
        end
    end
    game.StarterGui:SetCore("SendNotification", {
        Title = "Bans Removidos",
        Text = "Removidos: " .. successCount .. " bans",
        Duration = 5
    })
end})

