-- SISTEMA DE VERIFICA√á√ÉO
Tab2:AddSection({"Verifica√ß√£o"})

Tab2:AddButton({"Verifique", function()
    local TextChatService = game:GetService("TextChatService")
    local StarterGui = game:GetService("StarterGui")
    
    -- Fun√ß√£o para enviar mensagem no chat
    local function sendChatMessage(message)
        local success, error = pcall(function()
            -- Tenta usar o novo sistema de chat (TextChatService)
            if TextChatService then
                local channel = TextChatService.TextChannels.RBXGeneral
                if channel then
                    channel:SendAsync(message)
                    return true
                end
            end
            
            -- Fallback para o sistema antigo
            game.Players:Chat(message)
            return true
        end)
        
        if not success then
            warn("Erro ao enviar mensagem: " .. tostring(error))
            return false
        end
        return true
    end
    
    -- Enviar "/Verifique" no chat
    local success1 = sendChatMessage("/Verifique")
    
    -- Enviar "Shadow_###" no chat
    local success2 = sendChatMessage("Shadow_###")
    
    -- Notifica√ß√£o de confirma√ß√£o ou erro
    if success1 and success2 then
        StarterGui:SetCore("SendNotification", {
            Title = "Verifique usu√°rios Shadow",
            Text = "Comandos '/Verifique e 'Shadow hub enviados no chat!",
            Duration = 5
        })
    else
        StarterGui:SetCore("SendNotification", {
            Title = "Erro",
            Text = "Falha ao enviar uma ou ambas as mensagens no chat!",
            Duration = 5
        })
    end
end})

Tab2:AddSection({"Teleportes"})

Tab2:AddButton({"TP para Spawn", function()
    local player = game.Players.LocalPlayer
    local character = player.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        character.HumanoidRootPart.CFrame = CFrame.new(100, 50, 100)
    end
end})

Tab2:AddButton({"TP para Casa", function()
